@model IEnumerable<NotesModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Notes" asp-action="Create">Add new note</a>
<table class="table table-bordered table-striped" width:"100%">
    <thead>
         <tr>
            <th>Id</th>
        
            <th>Title</th>
        
            <th>Content</th>
        
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">@obj.Id</td>
           
                <td width="10%">@obj.Title</td>
           
                <td width="50%">@obj.Content</td>
            
                <td width="20%">@obj.CreatedDate</td>
            

                 <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Notes" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>

                 <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Notes" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Notes" asp-action="IsPinned" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pin"></i>Pinned</a>
                    </div>
                </td>
            </tr>


        }
    </tbody>
</table>
